@model teleScope.Models.UserSellerModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f6f5f9;
        color: #333;
        margin: 0;
        padding: 0;
    }

    h4 {
        font-size: 35px;
    }

    h1 {
        text-align: center;
        margin-top: 20px;
    }

    dl {
        margin-top: 0px;
        margin-bottom: 0px;
        border-collapse: collapse;
        width: 100%;
        padding: 20px;
    }

    dt, dd {
        padding: 20px;
        border: 1px solid #ddd;
        text-align: left;
    }

    dt {
        margin-top: 0px;
        margin-bottom: 0px;
        background-color: #A7ECFF;
    }

    dd {
        margin-top: 0px;
        margin-bottom: 0px;
        background-color: #ecf0f1;
    }

    a {
        text-decoration: none;
        color: #16141f;
        font-weight: bold;
    }

        a:hover {
            color: #660066;
        }

    .back-link {
        margin-top: 20px;
        text-align: center;
    }

    .col {
        margin: 0;
        padding: 0;
    }

    .details {
        width: 80%;
    }

    .btn:hover {
        background-color: #8b6bae;
    }

</style>

<h1>Details</h1>

<div>
    <h4>Seller</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.user.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.user.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.user.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.user.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.user.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.user.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.user.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.user.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.user.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.user.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.seller.TaxNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.seller.TaxNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.seller.SellerId" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-primary">Back to Sellers</a>
</div>
