<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - teleScope</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/teleScope.styles.css" asp-append-version="true" />

    <style>
        li a, .dropbtn {
            display: inline-block;
            color: black;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-weight: bold;
        }

        li a:hover, .dropdown:hover .dropbtn {
           background: #C8BFE7;
        }

        li.dropdown {
            display: inline-block;
            font-weight: bold;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background: #ffffff;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 99999;
            font-weight: bold;
        }


        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            text-align: left;
            font-weight: bold;
        }

         .dropdown-content a:hover {
             background: #d7d2ff;
         }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .navbar-fixed{
            width: 100%;
        }


    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">teleScope</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav flex-grow-1">

                        <li class="dropdown">
                            <a class="dropbtn text-white">Customers</a>
                            <div class="dropdown-content">
                                <a class="nav-link text-black" asp-area="" asp-controller="Calls" asp-action="CallHistory">My calls</a>
                                <a class="nav-link text-black" asp-area="" asp-controller="Bills" asp-action="customerBills">My Bills</a>
                                <a class="nav-link text-black" asp-area="" asp-controller="Programmes" asp-action="IndexS">Programs</a>
                            </div>

                        </li>
                        <li class="dropdown">
                            <a class="dropbtn text-white">Sellers</a>
                            <div class="dropdown-content">
                                <a class="nav-link text-black" asp-area="" asp-controller="Bills" asp-action="Index">Bills</a>
                                <a class="nav-link text-black" asp-area="" asp-controller="Calls" asp-action="Index">Calls</a>
                                <a class="nav-link text-black" asp-area="" asp-controller="Programmes" asp-action="IndexS">Programs</a>
                                <a class="nav-link text-black" asp-area="" asp-controller="Customers" asp-action="Index">Customers</a>
                            </div>

                        </li>
                        <li class="dropdown">
                            <a class="dropbtn text-white">Admins</a>
                            <div class="dropdown-content">
                                <a class="nav-link text-black" asp-area="" asp-controller="Admins" asp-action="Index">Admins</a>
                                <a class="nav-link text-black" asp-area="" asp-controller="Sellers" asp-action="Index">Sellers</a>
                                <a class="nav-link text-black" asp-area="" asp-controller="Programmes" asp-action="Index">Programs</a>
                            </div>

                        </li>

                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-bold" asp-controller="Users" asp-action="Login">Login</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br /><br />
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - teleScope - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
