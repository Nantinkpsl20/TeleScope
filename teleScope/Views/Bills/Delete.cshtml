@model teleScope.Models.BillsUserModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: #f6f5f9;
        color: #333;
        margin: 0;
        padding: 0;
    }

    h4 {
        font-size: 35px;
    }

    h1 {
        text-align: center;
        margin-top: 20px;
    }

    dl {
        margin-top: 0px;
        margin-bottom: 0px;
        border-collapse: collapse;
        width: 100%;
        padding: 20px;
    }

    dt, dd {
        padding: 20px;
        border: 1px solid #ddd;
        text-align: left;
    }

    dt {
        margin-top: 0px;
        margin-bottom: 0px;
        background-color: #A7ECFF;
    }

    dd {
        margin-top: 0px;
        margin-bottom: 0px;
        background-color: #ecf0f1;
    }

    a {
        text-decoration: none;
        color: #16141f;
        font-weight: bold;
    }

        a:hover {
            color: #660066;
        }

    .back-link {
        margin-top: 20px;
        text-align: center;
    }

    .col {
        margin: 0;
        padding: 0;
    }


        .btn:hover {
            background-color: #8b6bae;
        }

    .deleteBtn {
        background-color: #e60000;
    }

        .deleteBtn:hover {
            background-color: #660000;
        }
</style>

<h3>Are you sure you want to delete this bill?</h3>
<br>
<div>
    <h4>Data of Bill</h4>
    <hr />
    <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.user.Username)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.user.Username)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.phoneNumber.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.phoneNumber.Phone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.bill.IssueDate)
            </dt>
            <dd class="col-sm-10">
            @Model.bill.IssueDate.ToString("dd-MM-yyyy")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.bill.DueDate)
            </dt>
            <dd class="col-sm-10">
                @Model.bill.DueDate.ToString("dd-MM-yyyy")
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.bill.TotalAmount)
            </dt>
            <dd class="col-sm-10">
                @Model.bill.TotalAmount&#8364
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.bill.IsPaid)
            </dt>
            <dd class="col-sm-10">
            <span class="badge @(Model.bill.IsPaid.HasValue ? (Model.bill.IsPaid.Value ? "bg-success" : "bg-danger") : "bg-secondary")">
                @(Model.bill.IsPaid.HasValue ? (Model.bill.IsPaid.Value ? "Paid" : "Not Paid") : "Unknown")
            </span>

            </dd>
            
        </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="bill.BillId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back to Bills</a>
    </form>
</div>


